<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="#E0F7FA"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <EditText
        android:id="@+id/etotp"
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:hint="Enter OTP Code..."
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/secondary"
        android:textColorHint="@color/accent"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText,SpUsage,TextSizeCheck,TouchTargetSizeCheck" />
    <EditText
        android:id="@+id/etphone"
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:hint="Enter Phone Number..."
        android:inputType="phone"
        android:textColorHint="@color/accent"
        android:maxLength="10"
        android:textColor="@color/secondary"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etotp"
        tools:ignore="Autofill,HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/sendsms"
        android:layout_width="207dp"
        android:layout_height="54dp"
        android:background="#6778DC"
        android:gravity="center"
        android:text="SEND OTP"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="149dp"
        android:layout_height="54dp"
        android:background="#6778DC"
        android:gravity="center"
        android:text="HOME"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.636"
        tools:ignore="HardcodedText,SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>