<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="10dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/mygate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:text="MyGate"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage"
            tools:layout_editor_absoluteY="4dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="320dp"
            android:src="@drawable/sharp_add_alert_24"
            app:layout_constraintBottom_toBottomOf="@+id/imagemenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imagemenu"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="ContentDescription,ImageContrastCheck" />
        <ImageView
            android:id="@+id/imagemenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/base_menu"
            app:layout_constraintBottom_toBottomOf="@+id/mygate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mygate"
            app:menu="@menu/menu"
            android:contentDescription="@string/app_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/notice"
            android:layout_width="180dp"
            android:layout_height="203dp"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:layout_marginTop="164dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="KeyboardInaccessibleWidget">
            <ImageView
                android:id="@+id/imgnotice"
                android:layout_width="96dp"
                android:layout_height="87dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/pic33" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="110dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="NOTICES"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/helpdesk"
            android:layout_width="174dp"
            android:layout_height="201dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imghelp"
                android:layout_width="85dp"
                android:layout_height="83dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/helpdesk" />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="101dp"
                android:layout_height="58dp"
                android:gravity="center"
                android:text="Help Desk"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/emergency"
            android:layout_width="181dp"
            android:layout_height="206dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="200dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notice">
            <ImageView
                android:id="@+id/imgemer"
                android:layout_width="80dp"
                android:layout_height="77dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/emergency" />
            <TextView
                android:id="@+id/text3"
                android:layout_width="122dp"
                android:layout_height="68dp"
                android:gravity="center"
                android:text="Emergency Numbers"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/visitor"
            android:layout_width="175dp"
            android:layout_height="206dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintStart_toEndOf="@id/notice"
            app:layout_constraintTop_toBottomOf="@id/helpdesk">

            <ImageView
                android:id="@+id/imgvisit"
                android:layout_width="81dp"
                android:layout_height="78dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/visitor" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Visitors"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="ExtraText,RedundantNamespace">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#9C9C9B"
        android:layout_marginStart="4dp"
        app:fabAlignmentMode="end"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu"
        tools:ignore="MissingConstraints">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
        <Button
            android:id="@+id/fab"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="125dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/background"
            android:backgroundTint="#8EDDBB"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:text="➕"
            app:layout_anchor="@id/bottomAppBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.96"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck,KeyboardInaccessibleWidget,MissingConstraints" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
