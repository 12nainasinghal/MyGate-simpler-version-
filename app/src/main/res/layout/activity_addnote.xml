<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@color/primary"
    tools:context=".AddnoteActivity">
    <EditText
        android:id="@+id/addnote"
        android:layout_width="424dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/background"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:hint="ADD NOTE.."
        android:textColor="#E649A0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextContrastCheck" />
    <EditText
        android:id="@+id/notedetails"
        android:layout_width="369dp"
        android:layout_height="328dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/background"
        android:ems="10"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="10dp"
        android:lines="10"
        android:maxLines="15"
        android:minLines="8"
        android:padding="18dp"
        android:scrollbars="vertical"
        android:hint="NOTE DETAILS.."
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addnote"
        app:layout_goneMarginTop="16dp"
        tools:ignore="Autofill,HardcodedText,LabelFor" />

    <Button
        android:id="@+id/addnotebtn"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#7173DC"
        android:gravity="center"
        android:text="ADD NOTE"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notedetails"
        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>